<h1>Books</h1>
	<table class="table table-hover">
	  	<thead>
	  		<tr>
	  			<th></th>
	  			<th>Title</th>
	  			<th>Opinion</th>
	  		</tr>
	  	</thead>
	  	<tbody>
	  	<% books.each do |book| %>
	  		<tr>
	  		<td><%= attachment_image_tag book.user,:profile_image, size:"30x30", fallback:"/assets/NoImage.png" %></td>
	  		<td><%= link_to book.title, book_path(book.id) %></td>
			<td><%= book.body %></td>
	  		</tr>
	  	<% end %>
	  	</tbody>
 	</table>