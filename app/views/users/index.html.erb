<% if @newbook.errors.any? %>
	<div id="error_explanation">
		<h2 class="error_count"><%= @newbook.errors.count %>error prohibited this book from being saved:</h2>
	<ul>
		<% @newbook.errors.full_messages.each do |message| %>
			<li><%= message %></li>
