
<h2>User info</h2>
<%= attachment_image_tag user,:profile_image, size:"100x100", fallback:"/assets/NoImage.png" %><br>
<table class="table">
	  	<tbody>
	  		<tr>
	  		<th>name</th>
	  		<th><%= user.name %></th>
	  		</tr>
	  		<tr>
	  		<th>introduction</th>
			<th><%= user.introduction %></th>
	  		</tr>
	  	</tbody>
 	</table>

 	<% if user.id == current_user.id %>
	<%=link_to "", edit_user_path(current_user), class: "btn btn-default glyphicon glyphicon-wrench user-edit" %>
	<% else %>
	<%=link_to "", user_path(current_user), class: "btn btn-default glyphicon glyphicon-wrench user-edit" %>
	<% end %>

